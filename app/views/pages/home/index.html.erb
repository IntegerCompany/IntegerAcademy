
	<header class="header-text container">
		<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 transition04">
			<h1><b>Integer</b> Academy</h1>
			<h4 class="text-italic">development solution</h4>
		</div>
	</header>

	<section class="page-body transition04">

		<div class="container-fluid content-body transition04">

			<div class="form-description transition04">
				<p class="text-center text-italic">Launching Soon!</p>
				<p class="text-center text-italic">Submit your details below and we'll be in touch very soon...</p>
			</div>

			<!-- <form id="launching-soon" action="" method="post"> -->
			<%=form_for @student, url: create_student_path, html: {id: 'launching-soon'} do |f| %>
 
				<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 text-center">
					<label for="user-photo" id="user-photo-preview">
						<%= image_tag 'no-avatar.jpg' %>
					</label>
					<input id="user-photo" class="hide" name="user-resume" type="file" autocomplete="off">
					<label id="user-photo-head" for="user-photo">Завантажити фото</label>
					<div id="progress-bar"><div class="percent">0%</div></div>
				</div>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Ім'я (укр.)
					<!-- <input name="user-name" type="text" required autocomplete="off"> -->
					<%= f.text_field :first_name, autocomplete: "off", required: "true" %>
				</label>
				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Прізвище (укр.)
					<!-- <input name="user-surname" type="text" required autocomplete="off"> -->
					<%= f.text_field :last_name, autocomplete: "off", required: "true" %>
				</label>
				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Дата народження
					<!-- <input name="user-birthday" type="text" required autocomplete="off"> -->
					<%= f.text_field :birth_day, autocomplete: "off", required: "true" %>
				</label>
				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Email
					<!-- <input name="user-email" type="text" required autocomplete="off"> -->
					<%= f.email_field :email, autocomplete: "off", required: "true" %>
				</label>
				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Мобільний телефон
					<!-- <input id="user-phone" name="user-resume" type="text" required autocomplete="off"> -->
					<%= f.text_field :phone_number, autocomplete: "off", required: "true" %>
				</label>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Рівень англійcької
<!-- 					<select title="" name="english_level" id="english_level" class="select ">
						<option value="Beginner">Beginner</option>
						<option value="Elementary">Elementary</option>
						<option value="Pre-Intermediate">Pre-Intermediate</option>
						<option value="Intermediate">Intermediate</option>
						<option value="Upper-Intermediate">Upper-Intermediate</option>
						<option value="Advanced">Advanced</option>
					</select> -->

					<%= f.select(:english_level, id: 'english_level', class: 'select') do %>
					  <% [['Beginner', 'Beginner'],
						 ['Elementary', 'Elementary'],
						 ['Pre-Intermediate', 'Pre-Intermediate'],
						 ['Intermediate', 'Intermediate'],
						 ['Upper-Intermediate', 'Upper-Intermediate'],
						 ['Advanced', 'Advanced']].each do |el| %>
					    <%= content_tag(:option, el.first, value: el.last) %>
					  <% end %>
					<% end %>

				</label>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					ВНЗ
					<!-- <input name="user-resume" type="text" required autocomplete="off"> -->
					<%= f.text_field :university, autocomplete: "off", required: "true" %>
				</label>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Факультет
					<!-- <input name="user-resume" type="text" required autocomplete="off"> -->
					<%= f.text_field :faculty, autocomplete: "off", required: "true" %>
				</label>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Курc на якому навчаєтеcь
					<!-- <input name="user-resume" type="text" required autocomplete="off"> -->
					<%= f.text_field :course, autocomplete: "off", required: "true" %>

				</label>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					Напрям підготовки
					<select name="user-developer" type="text" required autocomplete="off">
						<option class="hide" value="noset"></option>
						<option value="web">Web developer</option>
						<option value="mobile">Mobile developer</option>
					</select>
				</label>

				<label class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					Додати резюме
					<input name="user-resume" type="file" required autocomplete="off">
				</label>

				<% @cats.each do |cat| %>
				<section id="skills-<%= cat.title.downcase.delete(' -') %>" class="container-fluid skills-section">
					<header class="skills-header"><%= cat.title %></header>
						<%= f.fields_for @student.student_categories.new do |sc|%>
							<ul class="skills">
								<%= sc.collection_check_boxes :sub_category_id, cat.sub_categories, :id, :title do |cb| %>
									<li>
										<%= cb.label %>
										<div class="squaredThree">
											<%= cb.check_box %>
											<label></label>
										</div>
									</li>
								<% end %>
							</ul>
						<% end %>
				</section>
				<% end %>

				<label class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
					Про Себе
					<%= f.text_area :about_me, rows: 6 %>
				</label>

				<label class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
					<!-- <input type="submit" value="Submit" class="submit-btn transition04"> -->
					<%= f.submit "Надіслати", class: "submit-btn transition04" %>
				</label>
			<% end %>

		</div>
	</section>
	